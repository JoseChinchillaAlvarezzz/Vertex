@model Vertex.Models.tickets
@{
    ViewBag.Title = "Crear Ticket";
    Layout = null;
    var nombre = ViewBag.Nombre as string;
    var apellido = ViewBag.Apellido as string;
    var telefono = ViewBag.Telefono as string;
    var correo = ViewBag.Correo as string;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Crear Ticket</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body style="background-color: #e6f0fa; padding: 30px; font-family: 'Segoe UI', sans-serif;">
    <div class="container">
        <h2 class="mb-4 text-center">Crear Nuevo Ticket</h2>

        @using (Html.BeginForm("Crear", "Cliente", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <div class="mb-3">
                <label class="form-label">Nombre</label>
                <input type="text" class="form-control" value="@nombre" readonly />
            </div>
            <div class="mb-3">
                <label class="form-label">Apellido</label>
                <input type="text" class="form-control" value="@apellido" readonly />
            </div>
            <div class="mb-3">
                <label class="form-label">Teléfono</label>
                <input type="text" class="form-control" value="@telefono" readonly />
            </div>
            <div class="mb-3">
                <label class="form-label">Correo</label>
                <input type="email" class="form-control" value="@correo" readonly />
            </div>

            <div class="mb-3">
                <label class="form-label">Título</label>
                @Html.TextBoxFor(m => m.titulo, new { @class = "form-control", required = "required" })
            </div>

            <div class="mb-3">
                <label class="form-label">Aplicación</label>
                @Html.TextBoxFor(m => m.aplicacion, new { @class = "form-control" })
            </div>

            <div class="mb-3">
                <label class="form-label">Descripción</label>
                @Html.TextAreaFor(m => m.descripcion, new { @class = "form-control", rows = "4", required = "required" })
            </div>

            <div class="mb-3">
                <label class="form-label">Categoría</label>
                @Html.DropDownListFor(m => m.categoria_id, ViewBag.Categorias as SelectList, "Seleccione", new { @class = "form-select", required = "required" })
            </div>

            <div class="mb-3">
                <label class="form-label">Prioridad</label>
                @Html.DropDownListFor(m => m.prioridad_id, ViewBag.Prioridades as SelectList, "Seleccione", new { @class = "form-select", required = "required" })
            </div>

            <button type="submit" class="btn btn-primary">Enviar Ticket</button>
            <a href="@Url.Action("Index", "Cliente")" class="btn btn-secondary">Cancelar</a>
        }
    </div>
</body>
</html>
