@model Vertex.Models.tickets
@{
    ViewBag.Title = "Detalle del Ticket";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Detalle del Ticket</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background-color: #e6f0fa;
            padding: 30px;
            font-family: 'Segoe UI', sans-serif;
        }

        .container {
            max-width: 700px;
            background: white;
            border-radius: 16px;
            padding: 30px;
            box-shadow: 0 2px 12px rgba(0,0,0,0.2);
        }

        .form-label {
            font-weight: 600;
        }

        .form-control[readonly], .form-select[disabled] {
            background-color: #f4f4f4;
            color: #333;
        }
    </style>
</head>
<body>
    <div class="container">
        <h2 class="mb-4 text-center">Detalle del Ticket</h2>

        <div class="mb-3">
            <label class="form-label">Título</label>
            <input type="text" class="form-control" value="@Model.titulo" readonly />
        </div>

        <div class="mb-3">
            <label class="form-label">Aplicación</label>
            <input type="text" class="form-control" value="@Model.aplicacion" readonly />
        </div>

        <div class="mb-3">
            <label class="form-label">Descripción</label>
            <textarea class="form-control" rows="4" readonly>@Model.descripcion</textarea>
        </div>

        <div class="mb-3">
            <label class="form-label">Fecha de Creación</label>
            <input type="text" class="form-control" value="@Model.fechacreacion.ToString("dd/MM/yyyy HH:mm")" readonly />
        </div>

        <div class="mb-3">
            <label class="form-label">Categoría</label>
            <input type="text" class="form-control" value="@ViewBag.Categoria" readonly />
        </div>

        <div class="mb-3">
            <label class="form-label">Prioridad</label>
            <input type="text" class="form-control" value="@ViewBag.Prioridad" readonly />
        </div>

        <div class="mb-3">
            <label class="form-label">Estado</label>
            <input type="text" class="form-control" value="@ViewBag.Estado" readonly />
        </div>

        <div class="text-center mt-4">
            <a href="@Url.Action("Index", "Cliente")" class="btn btn-secondary">Regresar</a>
        </div>
    </div>
</body>
</html>
