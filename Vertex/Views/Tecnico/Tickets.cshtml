@model IEnumerable<Vertex.Models.tickets>
@{
    Layout = null;
    string nombreUsuario = ViewBag.NombreUsuario ?? "Flores";
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <title>Mis tickets pendientes</title>
    <link href="https://fonts.googleapis.com/css2?family=Quicksand:wght@400;700&family=DM+Serif+Display&display=swap" rel="stylesheet">
    <style>
        body {
            margin: 0;
            padding: 0;
            background: #abd4eb;
            font-family: 'Quicksand', Arial, sans-serif;
        }

        .header-icons {
            position: absolute;
            top: 32px;
            right: 60px;
            display: flex;
            gap: 22px;
            z-index: 5;
        }

            .header-icons img {
                width: 46px;
                height: 46px;
                cursor: pointer;
            }

        .titulo {
            font-size: 3.2rem;
            font-family: 'DM Serif Display', serif;
            font-weight: 400;
            color: #181818;
            margin-top: 16px;
            margin-bottom: 8px;
            text-align: center;
        }

        .subtitulo {
            font-size: 2.1rem;
            font-family: 'DM Serif Display', serif;
            color: #232323;
            margin-bottom: 40px;
            text-align: center;
        }

        .cards-container {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            gap: 60px 52px;
            margin-top: 24px;
        }

        .ticket-card {
            background: #fff;
            border-radius: 12px;
            box-shadow: 0 2px 10px 0 rgba(0,0,0,0.10);
            width: 270px;
            min-height: 180px;
            padding: 18px 16px 22px 16px;
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        .ticket-header {
            font-size: 1rem;
            color: #888;
            margin-bottom: 10px;
            border-bottom: 1.2px solid #e3e3e3;
            width: 90%;
            text-align: left;
            padding-bottom: 3px;
            font-family: 'Quicksand', Arial, sans-serif;
        }

        .ticket-id {
            font-size: 1.14rem;
            color: #232323;
            font-weight: 600;
            margin: 16px 0 18px 0;
            text-align: left;
            width: 100%;
            display: flex;
            align-items: center;
            gap: 6px;
        }

            .ticket-id i {
                color: #2b2b2b;
                margin-right: 7px;
                font-size: 1.15rem;
            }

        .btn-ver {
            background: #f3d542;
            color: #232323;
            font-size: 1.07rem;
            font-family: inherit;
            font-weight: 700;
            border-radius: 8px;
            border: none;
            box-shadow: 0 1px 3px 0 rgba(90,90,90,0.09);
            padding: 10px 28px;
            margin-top: 12px;
            cursor: pointer;
            transition: filter 0.12s;
            display: block;
        }

            .btn-ver:active {
                filter: brightness(0.95);
            }

        {
            .cards-container

        {
            gap: 35px 16px;
        }

        }

        {
            .titulo

        {
            font-size: 1.5rem;
        }

        .subtitulo {
            font-size: 1rem;
        }

        .ticket-card {
            width: 96vw;
            max-width: 260px;
        }

        .cards-container {
            gap: 24px 4px;
        }

        .header-icons {
            right: 10px;
            top: 12px;
        }

        }
    </style>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
</head>
<body>
    <div class="header-icons">
        <a href="javascript:history.back()" title="Regresar">
            <img src="~/images/regres_icono.png" alt="Regresar" />
        </a>
        <a href="@Url.Action("Logout", "Login")" title="Cerrar sesión">
            <img src="~/images/home_icono.png" alt="Cerrar sesión" />
        </a>
    </div>
    <div class="titulo">Bienvenido @nombreUsuario</div>
    <div class="subtitulo">Mis tickets pendientes</div>

    <div class="cards-container">
        @* Reemplaza este foreach con tu modelo real *@
        @if (Model != null && Model.Any())
        {
            foreach (var ticket in Model)
            {
                <div class="ticket-card">
                    <div class="ticket-header">Mis Tickets</div>
                    <div class="ticket-id">
                        <i class="fa-regular fa-star"></i>
                        Ticket @ticket.id
                    </div>
                    <!-- Aquí puedes agregar más datos del ticket si quieres -->
                    <a href="@Url.Action("Detalle", "Tecnico", new { id = ticket.id })" class="btn-ver">Ver Detalle</a>
                </div>
            }
        }
        else
        {
            <div style="font-size:1.2rem;color:#444;">No tienes tickets pendientes.</div>
        }
    </div>
</body>
</html>
