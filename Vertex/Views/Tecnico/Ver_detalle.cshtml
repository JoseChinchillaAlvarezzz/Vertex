@model Vertex.Models.tickets // Cambia por tu ViewModel si usas uno
@{
    Layout = null;
    
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>Detalle Ticket</title>
    <link href="https://fonts.googleapis.com/css2?family=Quicksand:wght@400;700&family=DM+Serif+Display&display=swap" rel="stylesheet">
    <style>
        body {
            background: #abd4eb;
            font-family: 'Quicksand', Arial, sans-serif;
        }

        .estado-pendiente {
            color: red;
            font-weight: bold;
        }

        .estado-progreso {
            color: goldenrod;
            font-weight: bold;
        }

        .btn-iniciar {
            background-color: #f3d542;
            border: none;
            padding: 12px 30px;
            font-size: 1.4rem;
            font-family: 'DM Serif Display', serif;
            border-radius: 16px;
            cursor: pointer;
            margin-top: 25px;
        }
        .detalle-container {
            max-width: 98vw;
            margin: 20px auto;
            background: #fff;
            border: 5px solid #8ca4ed;
            border-radius: 14px;
            padding: 28px 28px 40px 28px;
            box-sizing: border-box;
        }

        .top-row {
            display: flex;
            justify-content: space-between;
        }

        .estado-pendiente {
            color: #be1a1a;
            font-weight: bold;
        }

        .info-contacto {
            background: #f7f7f7;
            border-radius: 7px;
            padding: 14px 20px;
            margin-top: 12px;
            margin-bottom: 18px;
        }

        .row-flex {
            display: flex;
            gap: 25px;
            margin-bottom: 20px;
        }

        .campo-grande {
            flex: 1;
            min-width: 0;
        }

        .campo-peq {
            flex: 0 0 30%;
        }

        .input-show {
            width: 95%;
            background: #fff;
            border: 2px solid #bbb;
            border-radius: 24px;
            padding: 8px 24px;
            font-size: 1.15rem;
            font-family: inherit;
            font-weight: bold;
            margin-top: 4px;
        }

        .desc-problema {
            background: #f7f7f7;
            padding: 10px 14px;
            border-radius: 7px;
            margin-bottom: 20px;
            min-height: 60px;
        }

        .tablas-section {
            display: flex;
            justify-content: center; /* ✅ Esto centra horizontalmente */
            gap: 40px; /* Espacio entre las tarjetas */
            margin: 30px 0;
        }


        .table-card {
            background: #fff;
            border: 2px solid #ccc;
            border-radius: 6px;
            padding: 10px 12px;
            min-width: 220px;
            width: 31%;
        }

            .table-card h4 {
                margin: 0 0 8px 0;
                font-size: 1.11rem;
                font-weight: bold;
                text-align: center;
            }

        .table-simple {
            width: 100%;
            border-collapse: collapse;
            font-size: 1rem;
        }

            .table-simple th, .table-simple td {
                padding: 3px 7px;
                border-bottom: 1px solid #e2e2e2;
            }

        .btn-iniciar {
            display: block;
            margin: 30px auto 0 auto;
            padding: 16px 52px;
            font-size: 2rem;
            border-radius: 30px;
            background: #f7e87e;
            color: #232323;
            font-family: 'DM Serif Display', serif;
            border: none;
            font-weight: 600;
            box-shadow: 0 1px 6px rgba(90,90,90,0.10);
            cursor: pointer;
            transition: filter .12s;
        }

            .btn-iniciar:active {
                filter: brightness(0.97);
            }

        .btn-comentario, .btn-finalizar {
            padding: 16px 52px;
            font-size: 2rem;
            border-radius: 30px;
            font-family: 'DM Serif Display', serif;
            border: none;
            font-weight: 600;
            box-shadow: 0 1px 6px rgba(90,90,90,0.10);
            cursor: pointer;
            transition: filter .12s;
            margin-top: 20px;
            display: inline-block;
        }

        .btn-comentario {
            background: #7fdbe7;
            color: #1f1f1f;
        }

        .btn-finalizar {
            background: #90ee90;
            color: #1f1f1f;
        }


        .icons-header {
            position: absolute;
            top: 32px;
            right: 60px;
            display: flex;
            gap: 22px;
            z-index: 5;
        }

            .icons-header img {
                width: 46px;
                height: 46px;
                cursor: pointer;
            }
    </style>
</head>
<body>
    <div class="detalle-container">
        <div class="top-row">
            <div>
                <div><b>Ticket #@Model.id</b></div>
                <p>
                    Estado:
                    @if (ViewBag.Estado == "Pendiente")
                    {
                        <span class="estado-pendiente">Pendiente</span>
                    }
                    else if (ViewBag.Estado == "En progreso")
                    {
                        <span class="estado-progreso">En progreso</span>
                    }
                    else
                    {
                        <span>@ViewBag.Estado</span>
                    }
                </p>

            </div>
            <div class="icons-header">
                <a href="javascript:history.back()" title="Regresar">
                    <img src="~/images/regres_icono.png" alt="Regresar" />
                </a>
                
            </div>
        </div>
        <div class="info-contacto">
            <b>Información de Contacto</b><br />
            Nombre: @Model.cliente.nombre @Model.cliente.apellido <br />
            Teléfono: @Model.cliente.telefono <br />
            Correo: @Model.cliente.email
        </div>

        <div class="row-flex">
            <div class="campo-peq">
                <div><b>Categoria</b></div>
                <div class="input-show">@Model.categoria?.categoria</div>
            </div>
            <div class="campo-peq">
                <div><b>Prioridad</b></div>
                <div class="input-show">@Model.prioridad?.prioridad</div>
            </div>
            <div class="campo-peq">
                <div><b>Nombre de la Aplicación afectada</b></div>
                <div class="input-show">@Model.aplicacion</div>
            </div>
        </div>


        <div>
            <b>Descripción del Problema</b>
            <div class="desc-problema">@Model.descripcion</div>
        </div>

        <div class="tablas-section">
            <div class="table-card">
                <h4>Comentarios</h4>
                <table class="table-simple">
                    <tr><th>Título</th><th></th></tr>
                    @if (Model.comentarios != null && Model.comentarios.Any())
                    {
                        foreach (var comentario in Model.comentarios)
                        {
                            <tr>
                                <td>@comentario.titulo</td>
                                
                            </tr>
                        }
                    }
                    else
                    {
                        <tr><td colspan="2">Sin comentarios</td></tr>
                    }
                </table>
            </div>

            <div class="table-card">
                <h4>Tareas</h4>
                <table class="table-simple">
                    <tr><th>Título</th><th></th></tr>
                    @if (Model.tareas != null && Model.tareas.Any())
                    {
                        foreach (var tarea in Model.tareas)
                        {
                            <tr>
                                <td>@tarea.titulo</td>
                                
                            </tr>
                        }
                    }
                    else
                    {
                        <tr><td colspan="2">Sin tareas asignadas</td></tr>
                    }
                </table>
            </div>
        </div>
        @if (ViewBag.Estado == "Pendiente")
        {
            <form method="post" asp-action="IniciarTrabajo" asp-controller="Tecnico">
                <input type="hidden" name="id" value="@Model.id" />
                <button type="submit" class="btn-iniciar">Iniciar Trabajo</button>
            </form>
        }
        @if (ViewBag.Estado == "En progreso")
        {
            <div style="text-align: center; margin-top: 30px;">
                <a href="@Url.Action("AgregarComentario", "Tecnico", new { id = Model.id })" class="btn-comentario">Agregar Comentario</a>

                <form method="post" asp-action="FinalizarTrabajo" asp-controller="Tecnico" style="display:inline;">
                    <input type="hidden" name="id" value="@Model.id" />
                    <button type="submit" class="btn-finalizar">Finalizar Trabajo</button>
                </form>
            </div>

        }


    </div>
</body>
</html>
