<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <title>Tickets pendientes - Panel Admin</title>
    <link href="https://fonts.googleapis.com/css2?family=Quicksand:wght@400;700&family=DM+Serif+Display&display=swap" rel="stylesheet">
    <style>

        body {
        margin: 0;
        padding: 0;
        background: #abd4eb;
        font-family: 'Quicksand', Arial, sans-serif;
        }

        .header-icons 
        {
        position: absolute;
        top: 32px;
        right: 60px;
        display: flex;
        gap: 22px;
        z-index: 5;
        }

        .header-icons img 
        {
        width: 46px;
        height: 46px;
        cursor: pointer;
        }

        .container 
        {
        max-width: 1000px;
        margin: 0 auto;
        min-height: 100vh;
        padding-top: 20px;
        position: relative;
        }

        .welcome 
        {
        font-size: 3.1rem;
        font-family: 'DM Serif Display', serif;
        font-weight: 400;
        color: #181818;
        margin-top: 16px;
        margin-bottom: 2px;
        text-align: left;
        }

        .subtitle 
        {
        font-size: 1.4rem;
        font-family: 'Quicksand', Arial, sans-serif;
        font-weight: 500;
        color: #222;
        margin-bottom: 38px;
        margin-top: 28px;
        margin-left: 2px;
        text-align: left;
        }

        .main-flex 
        {
        display: flex;
        flex-direction: row;
        justify-content: flex-start;
        align-items: flex-start;
        gap: 60px;
        margin-left: 40px;
        margin-bottom: 40px;
        }

        .tickets-list 
        {
        background: #fff;
        border-radius: 10px;
        box-shadow: 0 2px 12px 0 rgba(0,0,0,0.10);
        padding: 18px 22px 18px 22px;
        width: 265px;
        margin-bottom: 0;
        }

        .tickets-list h3 
        {
        font-size: 1.12rem;
        font-weight: bold;
        margin: 0 0 8px 0;
        color: #222;
        border-bottom: 1.5px solid #ededed;
        padding-bottom: 7px;
        font-family: 'Quicksand', Arial, sans-serif;
        }

        .ticket-item 
        {
        display: flex;
        align-items: center;
        justify-content: space-between;
        margin-bottom: 12px;
        margin-top: 4px;
        }

        .ticket-info 
        {
        display: flex;
        flex-direction: column;
        align-items: flex-start;
        }

        .ticket-star 
        {
        color: #232323;
        font-size: 1.15rem;
        margin-right: 7px;
        margin-bottom: 1px;
        }

        .ticket-title 
        {
        font-size: 1.07rem;
        font-weight: 500;
        color: #232323;
        }

        .ticket-priority 
        {
        font-size: 0.95rem;
        color: #888;
        font-weight: 400;
        margin-left: 21px;
        margin-top: -2px;
        margin-bottom: 2px;
        }

        .ticket-actions 
        {
        display: flex;
        flex-direction: row;
        align-items: center;
        gap: 2px;
        }

        .btn-mini 
        {
        background: #fff;
        color: #232323;
        font-size: 1.01rem;
        border: 1.7px solid #232323;
        border-radius: 19px;
        padding: 7px 18px;
        font-family: 'Quicksand', Arial, sans-serif;
        font-weight: 600;
        cursor: pointer;
        box-shadow: none;
        margin-left: 10px;
        transition: background 0.1s, color 0.1s;
        }

        .btn-mini:hover 
        {
        background: #f7e87e;
        color: #222;
        }

        /* Botones de abajo */
        .panel-buttons 
        {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 22px 44px;
        width: 550px;
        margin: 0 auto;
        margin-top: 18px;
        }

        .btn-panel 
        {
        background: #ede36e;
        color: #232323;
        font-size: 1.35rem;
        font-family: 'Quicksand', Arial, sans-serif;
        font-weight: 600;
        border-radius: 18px;
        border: none;
        box-shadow: 0 3px 12px 0 rgba(90,90,90,0.11);
        padding: 18px 0;
        cursor: pointer;
        transition: filter 0.1s;
        outline: none;
        }

        .btn-panel:active 
        {
        filter: brightness(0.95);
        }

        @@media (max-width: 950px) 
        {
        .main-flex

        {
        flex-direction: column;
        gap: 32px;
        margin-left: 10px;
        }

        .panel-buttons 
        {
        width: 96vw;
        }

        }

        @@media (max-width: 650px) {
        .container

        {
        padding: 0 4px;
        }

        .welcome 
        {
        font-size: 2rem;
        }

        .main-flex 
        {
        flex-direction: column;
        align-items: center;
        }

        .tickets-list 
        {
        width: 98vw;
        }

        .panel-buttons 
        {
        width: 96vw;
        }

        .header-icons 
        {
        right: 16px;
        top: 10px;
        }

        }
    </style>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
</head>
<body>
    <div class="header-icons">
        <img src="https://cdn-icons-png.flaticon.com/512/1828/1828490.png" alt="Cerrar sesión">
    </div>
    <div class="container">
        <div class="welcome"> @ViewBag.Bienvenida </div>
        <div class="subtitle">Tickets pendientes</div>
        <div class="main-flex">
            <!-- Sin asignaciones -->
            <div class="tickets-list">
                <h3>Sin asignaciones</h3>
                @foreach (var ticket in (IEnumerable<dynamic>)ViewData["listadoTickets"])
                {
                    <div class="ticket-item">
                        <span class="ticket-info">
                            <span><i class="fa-regular fa-star ticket-star"></i><span class="ticket-title">Ticket #@ticket.id</span></span>
                            <span class="ticket-priority">Prioridad: @ticket.prioridad</span>
                        </span>
                        <span class="ticket-actions">
                            <button class="btn-mini">Asignar técnico</button>
                        </span>
                    </div>
                }

            </div>
            <!-- Asignados -->
            <div class="tickets-list">
                <h3>Asignados</h3>
                <div class="ticket-item">
                    <span class="ticket-info">
                        <span><i class="fa-regular fa-star ticket-star"></i><span class="ticket-title">Ticket #847485</span></span>
                        <span class="ticket-priority">Prioridad: Crítica</span>
                    </span>
                    <span class="ticket-actions">
                        <button class="btn-mini">Ver detalle</button>
                    </span>
                </div>
                <div class="ticket-item">
                    <span class="ticket-info">
                        <span><i class="fa-regular fa-star ticket-star"></i><span class="ticket-title">Ticket #684993</span></span>
                        <span class="ticket-priority">Prioridad: Baja</span>
                    </span>
                    <span class="ticket-actions">
                        <button class="btn-mini">Ver detalle</button>
                    </span>
                </div>
                <div class="ticket-item">
                    <span class="ticket-info">
                        <span><i class="fa-regular fa-star ticket-star"></i><span class="ticket-title">Ticket #58493</span></span>
                        <span class="ticket-priority">Prioridad: Importante</span>
                    </span>
                    <span class="ticket-actions">
                        <button class="btn-mini">Ver detalle</button>
                    </span>
                </div>
            </div>
        </div>
        <!-- Panel de botones -->
        <div class="panel-buttons">
            <button class="btn-panel">Crear Usuarios</button>
            <button class="btn-panel">DashBoard</button>
            <button class="btn-panel">Lista de Usuarios</button>
            <button class="btn-panel">Ver Informes</button>
        </div>
    </div>
</body>
</html>
