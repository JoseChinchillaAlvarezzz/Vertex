@model IEnumerable<Vertex.Models.tickets>
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>Informes de tickets completados</title>
    <link href="https://fonts.googleapis.com/css2?family=DM+Serif+Display:wght@400;700&display=swap" rel="stylesheet">
    <style>
        body {
            background: #abd4eb;
            font-family: 'DM Serif Display', serif;
            margin: 0;
            padding: 0;
        }

        .header-icons {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin: 34px 54px 0 42px;
        }

            .header-icons img {
                width: 60px;
            }

        .titulo {
            text-align: center;
            font-size: 2.3rem;
            margin-top: 10px;
            margin-bottom: 32px;
            font-weight: 600;
            letter-spacing: 1px;
        }

        .tickets-list {
            display: flex;
            flex-direction: column;
            align-items: center;
            gap: 34px;
            margin-top: 18px;
        }

        .ticket-row {
            display: flex;
            align-items: center;
            justify-content: space-between;
            background: #fff;
            border-radius: 6px;
            min-width: 540px;
            max-width: 560px;
            width: 100%;
            margin-bottom: 12px;
            box-shadow: 0 2px 8px rgba(110,110,110,0.08);
        }

        .ticket-info {
            font-size: 1.45rem;
            padding: 20px 34px;
            font-family: inherit;
        }

        .btn-detalle {
            background: #232323;
            color: #fff;
            border: none;
            border-radius: 7px;
            padding: 13px 34px;
            font-size: 1.2rem;
            font-family: inherit;
            margin: 0 22px 0 0;
            cursor: pointer;
            font-weight: 600;
            transition: background 0.12s;
            text-decoration: none;
            display: inline-block;
        }

            .btn-detalle:active {
                background: #444;
            }
    </style>
</head>
<body>
    <div class="header-icons">
        <a href="javascript:history.back()"><img src="~/images/regres_icono.png" alt="Regresar" /></a>
        <a href="@Url.Action("Logout", "Login")"><img src="~/images/home_icono.png" alt="Salir" /></a>
    </div>
    <div class="titulo">Informes de tickets completados</div>
    <div class="tickets-list">
        @if (!Model.Any())
        {
            <div style="color:#333; font-size:1.2rem; margin-top:32px;">No hay tickets completados aún.</div>
        }
        else
        {
            foreach (var t in Model)
            {
                <div class="ticket-row">
                    <div class="ticket-info">
                        Ticket #@t.id
                    </div>
                    <a href="@Url.Action("DetalleTic", "Admin", new { id = t.id })" class="btn-detalle">
                        Ver Detalle
                    </a>
                </div>
            }
        }
    </div>
</body>
</html>
