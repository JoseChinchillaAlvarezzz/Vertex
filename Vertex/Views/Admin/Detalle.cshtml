@model DetalleTicketCompletoViewModel

@{
    ViewBag.Title = "Detalle de ticket";
    Layout = null;
    var ticket = (dynamic)ViewData["detalleTicket"];
    var comentarios = ViewData["Comentarios"] as List<ComentarioViewModel> ?? new List<ComentarioViewModel>();
    var tareas = ViewData["Tareas"] as List<TareaViewModel> ?? new List<TareaViewModel>();
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8" />
    <title>Ticket #@ticket.id</title>
    <link href="https://fonts.googleapis.com/css2?family=DM+Serif+Display&display=swap" rel="stylesheet">
    <style>
        body {
            background: #abd4eb;
            font-family: Arial, 'DM Serif Display', serif;
        }

        .main-container {
            background: #fff;
            border-radius: 12px;
            margin: 20px auto;
            padding: 36px 24px 28px 24px;
            max-width: 800px;
            box-shadow: 0 2px 13px 0 rgba(0,0,0,0.11);
        }

        h1 {
            font-family: 'DM Serif Display', serif;
            text-align: center;
            margin-top: 0;
            font-size: 2.3rem;
            letter-spacing: 1.5px;
        }

        .row-flex {
            display: flex;
            gap: 18px;
            margin-bottom: 14px;
        }

            .row-flex > div {
                flex: 1;
            }

        .form-label {
            font-weight: bold;
            font-size: 1rem;
            margin-bottom: 2px;
        }

        .form-value, input[type="text"], textarea, select {
            background: #fff;
            border: 1.7px solid #999;
            border-radius: 20px;
            padding: 7px 13px;
            font-size: 1rem;
            width: 100%;
            margin-bottom: 8px;
        }

            input[readonly], textarea[readonly] {
                background: #f5f5f5;
            }

        textarea {
            min-height: 60px;
            max-width: 100%;
            resize: vertical;
        }

        .big-input {
            margin-bottom: 20px;
        }

        .section-flex {
            display: flex;
            gap: 22px;
            margin-top: 22px;
        }

        .box {
            background: #fff;
            border: 1.2px solid #bbb;
            border-radius: 6px;
            padding: 10px 13px 17px 13px;
            flex: 1;
            min-width: 180px;
            max-width: 240px;
        }

        .box-title {
            font-weight: bold;
            font-size: 1.08rem;
            margin-bottom: 5px;
            border-bottom: 1.2px solid #aaa;
            padding-bottom: 4px;
        }

        .box-table {
            width: 100%;
            border-collapse: collapse;
        }

            .box-table th, .box-table td {
                text-align: left;
                font-size: 1rem;
                padding: 6px 2px;
            }

            .box-table th {
                border-bottom: 1px solid #bbb;
                font-weight: 600;
            }

        .action-buttons {
            display: flex;
            flex-direction: column;
            gap: 22px;
            justify-content: flex-end;
            align-items: flex-end;
            margin-left: 25px;
        }

        .btn-main {
            background: #222;
            color: #fff;
            border: none;
            border-radius: 13px;
            font-size: 1.35rem;
            font-weight: 600;
            padding: 13px 26px;
            cursor: pointer;
            margin-bottom: 9px;
            transition: background 0.12s;
            min-width: 240px;
            text-align: center;
        }

            .btn-main:active {
                background: #555;
            }

        .ver-link {
            color: #222;
            text-decoration: underline;
            cursor: pointer;
            margin-left: 12px;
        }
        @@media (max-width: 900px) {
            .main-container

        {
            max-width: 98vw;
        }

        }
        @@media (max-width: 700px) {
            .section-flex

        {
            flex-direction: column;
        }

        .action-buttons {
            margin-left: 0;
        }

        }
    </style>
</head>
<body>
    <div class="main-container">
        <h1>Ticket #@ticket.id</h1>
        <form>
            <div class="row-flex">
                <div>
                    <label class="form-label">Nombre</label>
                    <input type="text" value="@ticket.nombre" readonly />
                </div>
                <div>
                    <label class="form-label">Apellido</label>
                    <input type="text" value="@ticket.apellido" readonly />
                </div>
                <div>
                    <label class="form-label">Numero de telefono</label>
                    <input type="text" value="@ticket.telefono" readonly />
                </div>
                <div>
                    <label class="form-label">Correo Electronico</label>
                    <input type="text" value="@ticket.correo" readonly />
                </div>
            </div>
            <div class="row-flex">
                <div>
                    <label class="form-label">Categoria</label>
                    <input type="text" value="@ticket.categoria" readonly />
                </div>
                <div>
                    <label class="form-label">Prioridad</label>
                    <input type="text" value="@ticket.prioridad" readonly />
                </div>
                <div>
                    <label class="form-label">Aplicacion afectada</label>
                    <input type="text" value="@ticket.aplicacion" readonly />
                </div>
                <div>
                    <label class="form-label">Tecnico encargado</label>
                    <input type="text" value="@ticket.tecnico" readonly />
                </div>
            </div>
            <div>
                <label class="form-label">Descripcion del problema</label>
                <textarea readonly class="big-input">@ticket.descripcion</textarea>
            </div>
        </form>
        <div class="section-flex">
            <div class="box">
                <div class="box-title">Comentarios</div>
                <table class="box-table">
                    <tr><th>Titulo</th><th></th></tr>
                    @if (Model.Detalle != null && Model.Comentarios.Any())
                    {
                        foreach (var comentario in Model.Comentarios)
                        {
                            <tr>
                                <td>@comentario.titulo</td>
                                <td><a href="@Url.Action("VerComentario", "Tecnico", new { id = comentario.id })" class="ver-link">Ver</a></td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr><td colspan="2"><i>Sin comentarios</i></td></tr>
                    }
                </table>
            </div>
            <div class="box">
                <div class="box-title">Tareas</div>
                <table class="box-table">
                    <tr><th>Titulo</th><th></th></tr>
                    @if (Model.Tareas != null && Model.Tareas.Any())
                    {
                        foreach (var tarea in Model.Tareas)
                        {
                            <tr>
                                <td>@tarea.titulo</td>
                                <td><a href="@Url.Action("VerTarea", "Tecnico", new { id = tarea.id })" class="ver-link">Ver</a></td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr><td colspan="2"><i>Sin tareas</i></td></tr>
                    }
                </table>
            </div>
            <div class="action-buttons">
                <a href="@Url.Action("AgregarTarea", "Tecnico", new { ticketId = ticket.id })" class="btn-main">Agregar tarea</a>
                <a href="@Url.Action("AgregarComentario", "Tecnico", new { ticketId = ticket.id })" class="btn-main">Agregar comentario</a>
            </div>
        </div>
    </div>
</body>
</html>
