@model IEnumerable<Vertex.Models.usuarios>
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <title>Lista de Usuarios</title>
    <link href="https://fonts.googleapis.com/css2?family=DM+Serif+Display:wght@400;700&display=swap" rel="stylesheet">
    <style>
        body {
            background: #abd4eb;
            font-family: 'DM Serif Display', serif;
            margin: 0;
            padding: 0;
        }

        .top-icons {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin: 24px 36px 0 36px;
        }

        .icon-btn {
            background: none;
            border: none;
            cursor: pointer;
        }

            .icon-btn img {
                width: 42px;
            }

        .titulo {
            text-align: center;
            font-size: 2.2rem;
            margin-top: 18px;
            font-weight: bold;
        }

        .usuarios-table-container {
            display: flex;
            justify-content: center;
            margin-top: 42px;
        }

        .usuarios-table {
            background: #fff;
            border-radius: 8px;
            border: 3px solid #51a5df;
            min-width: 720px;
            box-shadow: 0 2px 10px rgba(120,120,120,0.12);
        }

        table {
            width: 100%;
            border-collapse: collapse;
            font-size: 1.05rem;
        }

        th, td {
            padding: 15px 14px;
            text-align: center;
            border-bottom: 2px solid #d1e5f3;
        }

        th {
            background: #eef7fd;
            font-weight: 600;
        }

        td {
            background: #fff;
        }

        .edit-btn {
            background: #232323;
            color: #fff;
            border: none;
            border-radius: 6px;
            padding: 8px 20px;
            font-size: 1.05rem;
            font-family: inherit;
            cursor: pointer;
            transition: background 0.12s;
        }

            .edit-btn:active {
                background: #444;
            }
    </style>
</head>
<body>
    <div class="top-icons">
        <a href="javascript:history.back()" class="icon-btn" title="Regresar">
            <img src="~/images/regres_icono.png" alt="Regresar" />
        </a>
        <a href="@Url.Action("Logout", "Login")" class="icon-btn" title="Cerrar sesión">
            <img src="~/images/home_icono.png" alt="Salir" />
        </a>
    </div>
    <div class="titulo">Lista de Usuarios</div>
    <div class="usuarios-table-container">
        <div class="usuarios-table">
            <table>
                <thead>
                    <tr>
                        <th>Usuario</th>
                        <th>Nombre</th>
                        <th>Apellido</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var usuario in Model)
                    {
                        <tr>
                            <td>@usuario.nombre</td>
                            <td>@usuario.nombre</td>
                            <td>@usuario.apellido</td>
                            <td>
                                <a href="@Url.Action("EditarUsuario", "Admin", new { id = usuario.id })" class="edit-btn">Detalle/Editar</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</body>
</html>
