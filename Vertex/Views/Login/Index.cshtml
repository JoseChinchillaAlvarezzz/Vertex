@{
    ViewBag.Title = "Inicio de Sesión";
    Layout = null; // Opcional: elimina si usas _Layout.cshtml
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
    <style>
        body {
            background-color: #a9cee5;
            font-family: 'Segoe UI', sans-serif;
        }

        .login-container {
            max-width: 400px;
            margin: 60px auto;
            padding: 30px;
            background-color: transparent;
            text-align: center;
        }

            .login-container h2 {
                font-size: 28px;
                font-weight: bold;
                margin-bottom: 20px;
            }

            .login-container img {
                width: 150px;
                margin-bottom: 20px;
            }

        .login-input {
            border: none;
            border-radius: 25px;
            padding: 12px 20px;
            width: 100%;
            background-color: #f4f4f4;
            margin-bottom: 15px;
        }

        .login-button {
            background-color: #f9df56;
            border: none;
            border-radius: 25px;
            padding: 12px 40px;
            font-weight: bold;
            font-size: 16px;
            box-shadow: 2px 2px 5px rgba(0,0,0,0.2);
        }
    </style>
</head>
<body>
    <div class="login-container">
        <h2>Inicio de Sesión</h2>

        <img src="~/images/logo_vertex.png" alt="Logo Vertex" />

        @if (ViewBag.ErrorMessage != null)
        {
            <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
        }

        <form asp-action="Login" method="post">
            <input type="email" name="email" class="login-input" placeholder="Usuario" required />
            <input type="password" name="password" class="login-input" placeholder="Contraseña" required />
            <button type="submit" class="login-button">Acceder</button>
        </form>
    </div>
</body>
</html>
